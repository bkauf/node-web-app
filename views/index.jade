doctype html
html
  head
    link(href='/stylesheets/style.css', rel='stylesheet')
    script(src='/javascripts/jquery-3.2.1.min.js')
    script(src='/javascripts/script.js')
    title From #{container}
  body
    block content
      h1=title
      h2 From #{container}
      #main
        #banner Secrets in this Container:
          a(href=#{secrets.toString()).secrets #{secrets.toString()}
        #menu
          #ul.menu
          li
            a(href="#health").health Get Health
          li
            a(href="#kill").kill Kill Container
        #action
          #ul.action
            li#status
